<div class='container'>
  <div id='user'>
    <%= image_tag @user.gravatar %>
    <h1><%= @user.name %></h1>
    <p>
    <%= @user.email %>
     | 
    <%= link_to 'Edit Profile', edit_user_path(@user) %>
    </p>
    <p><%= @user.bio %></p>
  </div>
  <div id='meetings'>
    <%= render @meetings %>
  </div>  
</div>